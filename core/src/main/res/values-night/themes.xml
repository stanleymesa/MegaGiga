<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MegaGiga" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <!-- Full Background -->
        <item name="colorPrimaryVariant">@color/pureWhite</item>
        <item name="colorOnPrimary">@color/pureWhite</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <!-- Toolbar -->
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="poppinsExtraBold">
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="poppinsMedium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

</resources>